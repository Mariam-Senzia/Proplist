{
    "version": 2,
    "builds": [
      {
        "src": "server/app.py",
        "use": "@vercel/python"
      }
    ],
    "routes": [
      {
        "src": "/(.*)",
        "dest": "server/app.py"
      }
    ],
    "env": {
        "DATABASE_URL": "@DATABASE_URL",
        "API_SECRET": "@API_SECRET",
        "API_KEY": "@API_KEY",
        "CLOUD_NAME": "@CLOUD_NAME"
    },
    "build": {
        "env": {
          "PIPENV_VENV_IN_PROJECT": "true"
        }
    }
  }
  